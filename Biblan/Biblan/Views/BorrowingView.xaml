<Window x:Class="Biblan.Views.BorrowingView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Borrowings" Height="300" Width="532">
    <Grid>
        <Button Content="Cancel" Height="23" HorizontalAlignment="Left" Margin="435,238,0,0" Name="btnCancel" VerticalAlignment="Top" Width="75" Click="btnCancel_Click" />
        <ListView Height="232" HorizontalAlignment="Left" Name="lvBorrowing" VerticalAlignment="Top" Width="510">
            <ListView.View>
            <GridView>
                <GridViewColumn Header="ISBN" Width="200" DisplayMemberBinding="{Binding Path=ISBN}"/>
                <GridViewColumn Header="Copy ID" Width="151" DisplayMemberBinding="{Binding Path=CopyID}"/>
                <GridViewColumn Header="Customer ID" Width="152" DisplayMemberBinding="{Binding Path=CustomerID}"/>
            </GridView>
            </ListView.View>
        </ListView>
        <Button Content="Return book" Height="23" HorizontalAlignment="Left" Margin="337,238,0,0" Name="btnReturn" VerticalAlignment="Top" Width="75" />
    </Grid>
</Window>
